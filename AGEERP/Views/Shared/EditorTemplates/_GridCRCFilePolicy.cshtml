@model AGEERP.Models.CRCPolicyVM

<style>
    .k-edit-form-container {
        position: relative;
        width: 900px;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(m => m.PolicyId)

<div class="row">
    <div class="col-md-4">
        @Html.Label("Policy Code")
        <div class="input-group">
            @Html.TextBoxFor(m => m.PolicyCode, new { placeholder = "Enter Policy Code", @class = "form-control", required = "required", validationmessage = "Please Enter Policy Code" })
        </div>
        <span class="k-invalid-msg" data-for="PolicyCode"></span>
    </div>
    <div class="col-md-4">
        @Html.Label("Short Desc")
        <div class="input-group">
            @Html.TextBoxFor(m => m.ShortDesc, new { placeholder = "Enter Short Desc", @class = "form-control", required = "required", validationmessage = "Please Enter Short Desc" })
        </div>
        <span class="k-invalid-msg" data-for="ShortDesc"></span>
    </div>
</div>
<div class="row">
    <div class="col-md-5">
        <label>From Date</label>
        @(Html.Kendo().DatePickerFor(m => m.EffectiveFrom)
        .Name("EffectiveFrom")
        .HtmlAttributes(new { style = "width: 100%", title = "EffectiveFrom", required = "required", validationmessage = "Please Select EffectiveFrom" })
        )
        <span class="k-invalid-msg" data-for="PolicyStartDate"></span>
    </div>
    <div class="col-md-2">
        <label>Active Status</label>
        <br />
        @(Html.Kendo().CheckBoxFor(m => m.Status).Name("Status"))
    </div>
</div>

<div class="row">
    @Html.Label("Policy Detail")

    @Html.TextArea("PolicyDetail", new
    {
        rows = 10,
        cols = 50,
        @style="width:100%;height:200px;",
        @class = "text-wrapp k-textbox",
        data_bind = "value:PolicyDetail"
    })

</div>

}
