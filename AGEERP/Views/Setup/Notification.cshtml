
@{
    ViewBag.Title = "Send Notification";
}
@using (Html.BeginForm("Notification", "Setup", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="content-header">
            <div class="card-header">
                <h3 class="card-title">Send Notification</h3>
                <div class="card-tools">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
                        <li class="breadcrumb-item active">Send Notification</li>
                    </ol>
                </div>
            </div>
        </div>

        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="row">

                <div class="col-md-3">
                    @Html.Label("Head Deparment")
                    @(Html.Kendo()
                                                             .DropDownList()
                                                             .Name("HDeptId")
                                                             .SelectedIndex(0)
                                                             .DataValueField("HDeptId")
                                                             .DataTextField("HDeptName")
                                                             .DataSource(x => x.Read("HDepartmentList", "Employee"))
                                                             .HtmlAttributes(new { @style = "width:100%" })
                    )
                </div>
                <div class="col-md-3">
                    @Html.Label("Department")
                    @(Html.Kendo()
                                                                    .DropDownList()
                                                                    .Name("DeptId")
                                                                    .OptionLabel("All Department ...")
                                                                    .DataValueField("DeptId")
                                                                    .DataTextField("Department")
                                                                    .Filter(FilterType.Contains)
                                                                    .CascadeFrom("HDeptId")
                                                                    .Events(e => e.Change("deptChange").DataBound("deptChange"))
                                                                    .IgnoreCase(true)
                                                                    .DataSource(ds =>
                                                                    {
                                                                        ds.Read(read => read.Action("DeptByHDeptList", "Employee").Data("filterDept")).ServerFiltering(true);
                                                                    })
                                                                    .HtmlAttributes(new { @style = "width:100%", @class = "validate" })
                    )
                </div>


                <div class="col-md-3">
                    @Html.Label("Employee")
                    @(Html.Kendo()
                                                                    .DropDownList()
                                                                    .Name("EmpId")
                                                                    .OptionLabel("All")
                                                                    .DataValueField("EmpId")
                                                                    .DataTextField("EmpName")
                                                                    //.CascadeFrom("DeptId")
                                                                    //.SelectedIndex(0)
                                                                    .Filter(FilterType.Contains)
                                                                    .AutoBind(false)
                                                                    .DataSource(ds =>
                                                                    {
                                                                        ds.Read(read => read.Action("EmpByDeptList", "Employee").Data("filterEmp"));
                                                                    })
                                                                    .HtmlAttributes(new { @style = "width:100%", @class = "validate" })
                    )
                </div>
                <div class="col-md-3">
                    @Html.Label("Designation")
                    @(Html.Kendo()
                      .DropDownList()
                      .Name("DesgId")
                      .OptionLabel("All Designation ...")
                      //.SelectedIndex(0)
                      .DataValueField("DesgId")
                      .DataTextField("DesgName")
                      .Filter(FilterType.Contains)
                      .DataSource(x => x.Read("JDesignationList", "Employee"))
                      .HtmlAttributes(new { @style = "width:100%" })
                            )
                </div>
                <div class="col-md-3">
                    @Html.Label("Message")
                    @Html.Kendo().TextBox().Name("Message").HtmlAttributes(new { @style = "width:100%" })
                </div>
                <div class="col-md-3">
                    <br />
                    <button class="k-button margin-10" type="submit">
                        <i class="fas fa-bell"></i>&nbsp; Send Notification
                    </button>
                </div>
            </div>

        </div>

    </div>

}
<script>
    function filterDept() {
        return {
            HDeptId: $('#HDeptId').val() || 0,
            //str: $('#DeptId').data("kendoComboBox").input.val() || ""
        }
    }
    function filterEmp() {
        return {
            DeptId: $('#DeptId').val() || 0
        }
    }
    function deptChange() {
        $('#EmpId').data('kendoDropDownList').dataSource.read();
    }
</script>