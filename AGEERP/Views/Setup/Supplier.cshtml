@using AGEERP.Models
@{
    ViewBag.Title = "Supplier";
    ViewBag.Parent = "Setup";
}
<div class="card">
    <div class="content-header">
        <div class="card-header">
            <h3 class="card-title">Supplier</h3>
            <div class="card-tools">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
                    <li class="breadcrumb-item active">Supplier</li>
                </ol>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-xs-12">
                @(Html.Kendo()
          .Grid<SupplierDetailVM>()
          .Name("gridSupplier")
          .Columns(columns =>
          {
              columns.Bound(c => c.SuppId).Filterable(false);
              columns.Bound(c => c.SuppName).Title("Supplier Name");
              columns.Bound(c => c.ContactPerson);
              columns.Bound(c => c.Email);
              columns.Bound(c => c.Mobile).Width(120);
              columns.ForeignKey(c => c.CategoryId, (System.Collections.IEnumerable)ViewData["CatVD"], "CategoryId", "CategoryTitle").Title("Category").Width(100);
              columns.Command(c => { c.Edit(); c.Destroy(); }).Width(190);
          })
          //.Pageable()
          .Sortable()
          .Scrollable()
             .ToolBar(t => { t.Search();t.Excel(); })
            .Search(s => s.Field(a => a.SuppName))
//.Filterable(ftb => ftb.Mode(GridFilterMode.Row).Extra(false)
//.Operators(operators => operators
//.ForString(str => str.Clear()
//.Contains("Contains"))))
            @*.ToolBar(toolBar =>
    {
    toolBar.Template(@<text> <div class="col-sm-2">@item.CreateButton() </div> <div class="col-sm-4 col-sm-push-7"><span>Search</span> &nbsp;&nbsp; <input class='k-textbox' value="Search..." onfocus="if (this.value==='Search...') this.value='';" onblur="this.value = this.value===''?'Search...':this.value;" id='searchbox' /></div></text>);
    })*@
.ToolBar(t => t.Create())
.Editable(e => e.Mode(GridEditMode.PopUp).TemplateName("_Supplier"))
.HtmlAttributes(new { style = "height:400px;" })
.DataSource(dataSource => dataSource
.Ajax()
//.PageSize(20)
.Events(e => e.Error("error_handler"))
.Model(model =>
{
    model.Id(m => m.SuppId);
    model.Field(m => m.SuppId).Editable(false);
})
.Read(read => read.Action("Supplier_Read", "Setup"))
.Create(create => create.Action("Supplier_Create", "Setup"))
.Update(update => update.Action("Supplier_Update", "Setup"))
.Destroy(update => update.Action("Supplier_Destroy", "Setup"))
))
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        var gridElement = $("#gridSupplier");
        $(document).ready(function () {
            resizeGrid();
            //$('#m_10000000').addClass('active');
            //$('#d_10000000').css("display", "block");
            //$('#m_10020000').addClass('active');
            //$('#a_10020000').addClass('active');
        })

        function resizeGrid() {
            var height = $(window).innerHeight() - $('header').innerHeight() - 120;
            if (height < 200) {
                height = 200;
            }
            else if (height > 910) {
                height = 910;
            }
            $("#gridSupplier").css("height", height);
            gridElement.data("kendoGrid").resize();
        }

        $(window).resize(function () {
            resizeGrid();
        });
        function error_handler(e) {
            if (e.errors) {
                var message = "Errors:\n";
                $.each(e.errors, function (key, value) {
                    if ('errors' in value) {
                        $.each(value.errors, function () {
                            message += this + "\n";
                        });
                    }
                });
                var dia = $("#msgBox").data("kendoDialog");
                dia.title("Error");
                dia.content(message);
                dia.open();
            }
        }
    </script>
    <style>
        th [role="listbox"] {
            visibility: hidden;
        }

        .k-filtercell, .k-filtercell .k-widget, .k-filtercell > span {
            display: table-row;
        }
    </style>
}
