@using AGEERP.Models
@{
    ViewBag.Title = "Expense Type";
}

<div class="card">
    <div class="content-header">

        <div class="card-header">
            <h3 class="card-title">Branch Expense Head</h3>
            <div class="card-tools">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
                    <li class="breadcrumb-item active">Branch Expense Head</li>
                </ol>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            @(Html.Kendo()
 .Grid<ExpenseTypeVM>()
 .Name("gridExpensetypes")
 .Columns(columns =>
 {
     columns.Bound(c => c.Id).Filterable(false).Hidden();
     columns.Bound(c => c.ExpType).Title("Expense Type");
     columns.Command(c => { c.Edit();  }).Width(250);
 })
 .Pageable()
 .Sortable()
 .Scrollable()
 .ToolBar(t => { t.Create(); t.Search(); })
 .Search(s => { s.Field(a => a.ExpType); })
 .Editable(e => e.Mode(GridEditMode.InLine))
 .HtmlAttributes(new { style = "height:400px;" })
 .DataSource(dataSource => dataSource
 .Ajax()
 .PageSize(20)
 .Events(e => e.Error("error_handler"))
 .Model(model =>
 {
     model.Id(m => m.Id);
     model.Field(m => m.ExpType);

 })
 .Read(read => read.Action("ExpenseType_Read", "Setup"))
 .Create(create => create.Action("ExpenseType_Create", "Setup"))
 .Update(update => update.Action("ExpenseType_Update", "Setup"))
 ))
        </div>

    </div>
</div>


<script type="text/javascript">
    var gridElement = $("#gridExpensetypes");
    $(document).ready(function () {
        resizeGrid();
        //$('#m_10000000').addClass('active');
        //$('#d_10000000').css("display", "block");
        //$('#m_10050000').addClass('active');
        //$('#a_10050000').addClass('active');
    })

    function resizeGrid() {
        var height = $(window).innerHeight() - $('header').innerHeight() - 180;
        if (height < 200) {
            height = 200;
        }
        else if (height > 910) {
            height = 910;
        }
        $("#gridExpensetypes").css("height", height);
        gridElement.data("kendoGrid").resize();
    }

    $(window).resize(function () {
        resizeGrid();
    });
    function error_handler(e) {
        if (e.errors) {
            var message = "Errors:\n";
            $.each(e.errors, function (key, value) {
                if ('errors' in value) {
                    $.each(value.errors, function () {
                        message += this + "\n";
                    });
                }
            });
            var dia = $("#msgBox").data("kendoDialog");
            dia.title("Error");
            dia.content(message);
            dia.open();
        }
    }
</script>
