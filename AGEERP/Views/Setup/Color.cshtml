@using AGEERP.Models
@{
    ViewBag.Title = "Color";
    ViewBag.Parent = "Setup";
}

<div class="card">
    <div class="content-header">
        <div class="card-header">
            <h3 class="card-title">Color</h3>
            <div class="card-tools">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
                    <li class="breadcrumb-item active">Color</li>
                </ol>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-xs-12">
                @(Html.Kendo()
                .Grid<ColorVM>()
                .Name("gridColor")
                .Columns(columns =>
                {
                    columns.Bound(c => c.ColorId).Filterable(false).Hidden();
                    columns.Bound(c => c.ColorCode);
                      columns.Bound(c => c.ColorName);
                    columns.Command(c => { c.Edit(); }).Width(250);
                })
                .Pageable()
                .Sortable()
                .Scrollable()
        .ToolBar(t => { t.Search(); })
              .Search(s =>
                      {
                  s.Field(c => c.ColorName);

              })
.ToolBar(t => t.Create())
.Editable(e => e.Mode(GridEditMode.InLine))
.HtmlAttributes(new { style = "height:400px;" })
.DataSource(dataSource => dataSource
.Ajax()
.PageSize(20)
.Events(e => e.Error("error_handler"))
.Model(model =>
{
model.Id(m => m.ColorId);
model.Field(m => m.ColorCode);
model.Field(m => m.ColorName);
})
.Read(read => read.Action("Color_Read", "Setup"))
.Create(create => create.Action("Color_Create", "Setup"))
.Update(update => update.Action("Color_Update", "Setup"))
))
            </div>

        </div>
    </div>
</div>

@section scripts
{
    <script Model="text/javascript">
        var gridElement = $("#gridColor");
        $(document).ready(function () {
            resizeGrid();
            //$('#m_10000000').addClass('active');
            //$('#d_10000000').css("display", "block");
            //$('#m_10010000').addClass('active');
            //$('#d_10010000').css("display", "block");
            //$('#m_10010400').addClass('active');
            //$('#a_10010400').addClass('active');
        })

        function resizeGrid() {
            var height = $(window).innerHeight() - $('header').innerHeight() - 180;
            if (height < 200) {
                height = 200;
            }
            else if (height > 910) {
                height = 910;
            }
            $("#gridColor").css("height", height);
            gridElement.data("kendoGrid").resize();
        }

        $(window).resize(function () {
            resizeGrid();
        });
        function error_handler(e) {
            if (e.errors) {
                var message = "Errors:\n";
                $.each(e.errors, function (key, value) {
                    if ('errors' in value) {
                        $.each(value.errors, function () {
                            message += this + "\n";
                        });
                    }
                });
                var dia = $("#msgBox").data("kendoDialog");
                dia.title("Error");
                dia.content(message);
                dia.open();
            }
        }
    </script>
}
