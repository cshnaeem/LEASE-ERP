@using AGEERP.Models
@{
    ViewBag.Title = "Type";
    ViewBag.Parent = "Setup";
}
<div class="card">
    <div class="content-header">
        <div class="card-header">
            <h3 class="card-title">Type</h3>
            <div class="card-tools">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
                    <li class="breadcrumb-item active">Type</li>
                </ol>
            </div>
        </div>
    </div>
    <div class="card-body">
        @(Html.Kendo()
                                                                        .Grid<TypeVM>()
                                                                        .Name("gridType")
                                                                        .Columns(columns =>
                                                                        {
                                                                            columns.Bound(c => c.TypeId).Filterable(false).Hidden();
                                                                            columns.ForeignKey(c => c.ComId, (System.Collections.IEnumerable)ViewData["CompanyVD"], "ComId", "ComName").Title("Company");
                                                                            columns.ForeignKey(c => c.ProductId, (System.Collections.IEnumerable)ViewData["ProductVD"], "ProductId", "Name").Title("Product");
                                                                            columns.Bound(c => c.Name).Title("Type");
                                                                            columns.Command(c => { c.Edit(); c.Destroy(); }).Width(250);
                                                                        })
                                                                        .Pageable()
                                                                        .Sortable()
                                                                        .Scrollable()
//.Filterable(ftb => ftb.Mode(GridFilterMode.Row))
    @*.ToolBar(toolBar =>
    {
        toolBar.Template(@<text> <div class="col-sm-2">@item.CreateButton() </div>  <div class="col-sm-4 col-sm-push-7"><span>Search</span> &nbsp;&nbsp; <input class='k-textbox' value="Search..." onfocus="if (this.value==='Search...') this.value='';" onblur="this.value = this.value===''?'Search...':this.value;" id='searchbox' /></div></text>);
    })*@
      .ToolBar(t => { t.Search(); })
     .Search(s => s.Field(a => a.Name))
.ToolBar(t => t.Create())
.Editable(e => e.Mode(GridEditMode.InLine))
.HtmlAttributes(new { style = "height:400px;" })
.DataSource(dataSource => dataSource
.Ajax()
.PageSize(20)
.Events(e => e.Error("error_handler"))
.Model(model =>
{
model.Id(m => m.TypeId);
model.Field(m => m.Name);
model.Field(m => m.ComId);
model.Field(m => m.ProductId);
})
.Read(read => read.Action("Type_Read", "Setup"))
.Create(create => create.Action("Type_Create", "Setup"))
.Update(update => update.Action("Type_Update", "Setup"))
.Destroy(update => update.Action("Type_Destroy", "Setup"))
))
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        var gridElement = $("#gridType");
        $(document).ready(function () {
            resizeGrid();
            //$('#m_10000000').addClass('active');
            //$('#d_10000000').css("display", "block");
            //$('#m_10010000').addClass('active');
            //$('#d_10010000').css("display", "block");
            //$('#m_10010300').addClass('active');
            //$('#a_10010300').addClass('active');
        })

        function resizeGrid() {
            var height = $(window).innerHeight() - $('header').innerHeight() - 180;
            if (height < 200) {
                height = 200;
            }
            else if (height > 910) {
                height = 910;
            }
            $("#gridType").css("height", height);
            gridElement.data("kendoGrid").resize();
        }

        $(window).resize(function () {
            resizeGrid();
        });
        function error_handler(e) {
            if (e.errors) {
                var message = "Errors:\n";
                $.each(e.errors, function (key, value) {
                    if ('errors' in value) {
                        $.each(value.errors, function () {
                            message += this + "\n";
                        });
                    }
                });
                var dia = $("#msgBox").data("kendoDialog");
                dia.title("Error");
                dia.content(message);
                dia.open();
            }
        }
    </script>
}
