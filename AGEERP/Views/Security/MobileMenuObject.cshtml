@using AGEERP.Models
@{
    ViewBag.Title = "Mobile Menu Object";
}
<div class="card">
    <div class="content-header">
        <div class="card-header">
            <h3 class="card-title">Mobile Menu Object</h3>
            <div class="card-tools">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
                    <li class="breadcrumb-item active">Mobile Menu Object</li>
                </ol>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            @(Html.Kendo()
                       .Grid<MobileMenuVM>()
                       .Name("gridMobileMenu")
                       .Columns(columns =>
                       {
                           columns.Bound(c => c.ActivityId);
                           columns.Bound(c => c.ParentId);
                           columns.Bound(c => c.ActivityTitle);
                           columns.Bound(c => c.Link);
                           columns.Bound(c => c.Icon);
                           columns.Bound(c => c.IsVisible);
                           columns.Bound(c => c.AppType);
                           columns.Command(c => { c.Edit(); c.Destroy(); }).Width(250);
                       })
                       .Pageable()
                       .Sortable()
                       .Scrollable()
                     //  .Filterable(ftb => ftb.Mode(GridFilterMode.Row))
                      // .ToolBar(t => t.Create())
  .ToolBar(t => { t.Create(); t.Search(); })
           .Search(s => { s.Field(a => a.ActivityTitle); })
.Editable(e => e.Mode(GridEditMode.InLine))
                       .HtmlAttributes(new { style = "height:400px;" })
                       //.Events(e => e.Change("OnPriceChange"))
                       .DataSource(dataSource => dataSource
                       .Ajax()
                       .PageSize(20)
                       .Events(e => e.Error("error_handler"))
                       .Model(model =>
                       {
                            model.Id(m => m.ActivityId);
                            model.Field(m => m.ParentId);
                            model.Field(m => m.ActivityTitle);
                            model.Field(m => m.Link);
                            model.Field(m => m.Icon);
                            model.Field(m => m.IsVisible);
                            model.Field(m => m.AppType);
                       })
                       .Read(read => read.Action("MobileMenuObject_Read", "Security"))
                       .Create(create => create.Action("MobileMenuObject_Create", "Security"))
                       .Update(update => update.Action("MobileMenuObject_Update", "Security"))
                        .Destroy(update => update.Action("MobileMenuObject_Delete", "Security"))
                       ))
        </div>
    </div>
</div>


