@using AGEERP.Models
@{
    ViewBag.Title = "Users";
    ViewBag.Parent = "Security";
}
<style>
    .field-icon {
        float: right;
        margin-left: -25px;
        margin-top: -25px;
        position: relative;
        z-index: 2;
    }
</style>

@(Html.Kendo()
                      .Grid<UserVM>()
                      .Name("gridUsers")
                      .Columns(columns =>
                      {
                          columns.Bound(c => c.UserID).Hidden();
                          columns.Bound(c => c.Username);
                          columns.Bound(c => c.Password).ClientTemplate("******").EditorTemplateName("Password");
                          columns.Bound(c => c.FullName);
                          columns.ForeignKey(p => p.GroupId, (System.Collections.IEnumerable)ViewData["GroupVD"], "GroupID", "GroupName").Title("Group");
                          columns.Bound(c => c.Status).ClientTemplate(" #=Status ? 'Active':'In Active' #");
                          columns.Command(c => { c.Edit(); }).Width(250);
                      })
                      .Pageable()
                      .Sortable()
                      .Scrollable()
                      .Filterable()
                      .ToolBar(t => t.Create())
                    .Editable(e => e.Mode(GridEditMode.PopUp).TemplateName("_Users"))
                    .HtmlAttributes(new { style = "height:400px;" })
                    .DataSource(dataSource => dataSource
                        .Ajax()
                        .PageSize(20)
                        .Events(e => e.Error("error_handler"))
                        .Model(model =>
                        {
                            model.Id(m => m.UserID);
                            model.Field(m => m.Username);
                            model.Field(m => m.FullName);
                            model.Field(m => m.Password);
                            model.Field(m => m.GroupId);
                        })
                        .Read(read => read.Action("User_Read", "Security"))
                    .Create(create => create.Action("User_Create", "Security"))
                    .Update(update => update.Action("User_Update", "Security"))
                    ))
@section scripts
{
    <script>
        $(document).ready(function () {
            //$('#m_11000000').addClass('active');
            //$('#d_11000000').css("display", "block");
            //$('#m_11020000').addClass('active');
            //$('#a_11020000').addClass('active');
            resizeGrid();

        });

        var gridElement = $("#gridUsers");

        function resizeGrid() {
            var height = $(window).innerHeight() - $('header').innerHeight() - 180;
            if (height < 200) {
                height = 200;
            }
            else if (height > 910) {
                height = 910;
            }
            $("#gridUsers").css("height", height);
            gridElement.data("kendoGrid").resize();
        }
        function TooglePassword() {
            $("#togglepassword").toggleClass("k-i-lock k-i-unlock");
            var input = $("[id='" + $("#togglepassword").attr("toggle") + "']");
            if (input.attr("type") === "password") {
                input.attr("type", "text");
            } else {
                input.attr("type", "password");
            }
        }


        $(window).resize(function () {
            resizeGrid();
        });
        function error_handler(e) {
            if (e.errors) {
                var message = "Errors:\n";
                $.each(e.errors, function (key, value) {
                    if ('errors' in value) {
                        $.each(value.errors, function () {
                            message += this + "\n";
                        });
                    }
                });
                var dia = $("#msgBox").data("kendoDialog");
                dia.title("Error");
                dia.content(message);
                dia.open();
            }
        }
        function filterEmp() {
                return {
                    //DeptId: $('#DeptId').val(),
                    str: $('#EmployeeId').data("kendoMultiColumnComboBox").input.val() || ""
                }
            }
        function EmpChange() {
            var dat = $('#EmployeeId').data('kendoMultiColumnComboBox').dataItem();
            $('#Username').val(dat.EmpId);
            $('#FullName').val(dat.EmpName);
            $('#Username').change();
            $('#FullName').change();
        }
        

    </script>
}