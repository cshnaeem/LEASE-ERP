
@{
    ViewBag.Title = "Bank Letter";
}
<div class="card">
    <div class="content-header">
        <div class="card-header">
            <h3 class="card-title">Bank Letter</h3>
            <div class="card-tools">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Salary</a></li>
                    <li class="breadcrumb-item active">Bank Letter</li>
                </ol>
            </div>
        </div>
    </div>

    <div class="col-lg-12 col-md-12 col-xs-12">
        @using (Html.BeginForm("BankLetter", "Report", FormMethod.Post, new { target = "_blank" }))
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-md-3">
                    @Html.Label("Month")
                    @Html.Kendo().DatePicker().Name("Month").Depth(CalendarView.Year).Start(CalendarView.Year).Events(ev => ev.Change("onChange"))
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <br />
                    <button class="k-button margin-10" type="submit">
                        <i class="fas fa-print"></i> Show
                    </button>
                </div>
            </div>
        }
    </div>
</div>


