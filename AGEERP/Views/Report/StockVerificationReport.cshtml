
@{
    ViewBag.Title = "Stock Verification Report";
}

@using (Html.BeginForm("StockVerificationReport", "Report", FormMethod.Post, new { target = "_blank" }))
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="content-header">
            <div class="card-header">
                <h3 class="card-title">Stock Verification Report</h3>
                <div class="card-tools">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
                        <li class="breadcrumb-item active">Stock Verification Report</li>
                    </ol>
                </div>
            </div>
        </div>

        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="row">
                <div class="col-md-3 col-sm-3">
                    @Html.Label("Location")
                    @(Html.Kendo()
                    .MultiColumnComboBox()
                    .Name("LocId")
                    //.Placeholder("Select Locations ...")
                    .DataValueField("LocId")
                    .DataTextField("LocName")
                    .SelectedIndex(0)
                    .Columns(columns =>
                    {
                        columns.Add().Field("LocCode").Width("100px");
                        columns.Add().Field("LocName").Width("200px");
                    })
                    .FilterFields(new string[] { "LocCode", "LocName" })
                    .Filter(FilterType.Contains)
                    .DataSource(ds =>
                    {
                        ds.Read(read => read.Action("LocationList", "Setup"));
                    })
                    .Events(e => e.Change("loadDocuments"))
                    .HtmlAttributes(new { @style = "width:100%", @required = true })
                    )
                </div>
                <div class="col-md-3">
                    @Html.Label("Date")
                    @Html.Kendo().DatePicker().Name("Date").Value(DateTime.Now.Date).Events(e => e.Change("loadDocuments")).HtmlAttributes(new { @style = "width:100%" })
                </div>
                <div class="col-md-3">
                    @Html.Label("Document Number")
                    <input id="DocId" style="width:100%" name="DocId"/>
                </div>
                <div class="col-md-3">
                    <br />
                    <button class="k-button margin-10" type="submit">
                        <i class="fas fa-print"></i>&nbsp; Show
                    </button>
                </div>
            </div>
        </div>
    </div>
}
<script>
    $("#DocId").kendoDropDownList({
        optionLabel:"Select Document #",
        dataTextField: "DocId",
        dataValueField: "DocId"
    });
    function loadDocuments() {
        $.getJSON("/Report/StockVerificationList", { LocId: $("#LocId").val(), dateTime: $("#Date").val() })
            .done(function (data) {
                if (data != null) {
                    $("#DocId").data("kendoDropDownList").setDataSource(data);
                }
            })
            .fail(function (jqxhr, textStatus, error) {
                alert('No Document Found against Selected Filters');
            });
    }
</script>
