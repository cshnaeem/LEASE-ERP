
@{
    ViewBag.Title = "Monthly Comparison Summary";
}
<style>
    .margin-15 {
        margin-top: 15px;
    }
</style>
<div class="card">
    <div class="content-header">
        <div class="card-header">
            <h3 class="card-title">Monthly Comparison Summary</h3>
            <div class="card-tools">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Reports</a></li>
                    <li class="breadcrumb-item active">Monthly Comparison Summary</li>
                </ol>
            </div>
        </div>
    </div>

    <div class="col-lg-12 col-md-12 col-xs-12">
        @using (Html.BeginForm("MonthlyComparison", "Report", FormMethod.Post, new { target = "_blank", id="monthlyComparison" }))
        {
            @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-4">
                @Html.Label("Location")
                @(Html.Kendo()
                .MultiColumnComboBox()
                    .Name("LocId")
                    .Placeholder("Select Location ...")
                    .DataValueField("LocId")
                    .DataTextField("LocName")
                    .SelectedIndex(0)
                    .Columns(columns =>
                    {
                        columns.Add().Field("LocCode").Width("100px");
                        columns.Add().Field("LocName").Width("200px");
                    })
                    .FilterFields(new string[] { "LocCode", "LocName" })
                    .Filter(FilterType.Contains)
                .DataSource(ds =>
                {
                    ds.Read(read => read.Action("LocationList", "Setup"));
                })
                .HtmlAttributes(new { @style = "width:100%" , required = "required", validationmessage = "Location is Required" })
                )
                <span class="k-invalid-msg" data-for="LocId"></span>
            </div>
            <div class="col-md-4">
                @Html.Label("Ist Date")
                @Html.Kendo().DatePicker().Name("PrevDate").Start(CalendarView.Year).Depth(CalendarView.Year).Format("MMMM yyyy").Value(DateTime.Now.Date.AddMonths(-1)).HtmlAttributes(new { @style = "width:100%" })
            </div>
            <div class="col-md-4">
                @Html.Label("Second Date")
                @Html.Kendo().DatePicker().Name("DATEMONTH").Start(CalendarView.Year).Depth(CalendarView.Year).Format("MMMM yyyy").Value(DateTime.Now.Date).HtmlAttributes(new { @style = "width:100%" })
            </div>
            <div class="col-md-3">
                <br />
                <button class="k-button margin-15" type="submit">
                    <i class="fas fa-print"></i> Show
                </button>
            </div>
        </div>
        }
    </div>
</div>
<script>
    $(function () {
        var validator = $("#monthlyComparison").kendoValidator().data("kendoValidator");
        $("form").submit(function (event) {
        });
    });
</script>