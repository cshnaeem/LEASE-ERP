@{
    ViewBag.Title = "Outstand Summary";
}

@using (Html.BeginForm("GMWiseSrm", "Report", FormMethod.Post, new { target = "_blank" }))
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="content-header">
            <div class="card-header">
                <h3 class="card-title">Outstand Summary</h3>
                <div class="card-tools">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Report</a></li>
                        <li class="breadcrumb-item active">Outstand Summary</li>
                    </ol>
                </div>
            </div>
        </div>



        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="row">
                <div class="col-md-3" id="rmo">
                    @Html.Label("GM Name")
                    @(Html.Kendo()
                    .MultiColumnComboBox()
                    .Name("GMId")
                    .Placeholder("All GM ...")
                    .DataValueField("GMId")
                    .DataTextField("GMName")

                    .Columns(columns =>
                    {
                        columns.Add().Field("GMId").Width("100px");
                        columns.Add().Field("GMName").Width("200px");
                    })
                    .FilterFields(new string[] { "GMId", "GMName" })
                    .Filter(FilterType.Contains)
                    .DataSource(ds =>
                    {
                    ds.Read(read => read.Action("GMList", "Employee"));
                    })
                    .HtmlAttributes(new { @style = "width:100%" })
                    )
                </div>
                <div class="col-md-3" id="rmo1">
                    @Html.Label("Month")
                    @Html.Kendo().DatePicker().Name("Month").Value(DateTime.Now.Date).HtmlAttributes(new { @style = "width:100%" })

                </div>
                <div class="col-md-3" id="rmo2" style="display:none;">
                    @Html.Label("From Date")
                    @Html.Kendo().DatePicker().Name("FromDate").Start(CalendarView.Year).Value(DateTime.Now.Date).HtmlAttributes(new { @style = "width:100%" })

                </div>
                <div class="col-md-3" id="rmo3" style="display:none;">
                    @Html.Label("To Date")
                    @Html.Kendo().DatePicker().Name("ToDate").Start(CalendarView.Year).Value(DateTime.Now.Date).HtmlAttributes(new { @style = "width:100%" })

                </div>
                <div class="col-md-3 col-sm-4" id="rmo6" style="display:none;">
                    @Html.Label("Category")
                    @(Html.Kendo().DropDownList().Name("Category")
                        .BindTo(new List<SelectListItem>
                        () {
                            new SelectListItem() {
                            Text = "All",
                            Value = ""
                            },
                            new SelectListItem() {
                            Text = "Fresh",
                            Value = "F"
                            },
                            new SelectListItem() {
                            Text = "Regular",
                            Value = "R"
                            }
                        })
                        .HtmlAttributes(new { @style = "width:100%" }))
                </div>


                <div class="col-md-3" id="rmo5" style="display:none;">
                    @Html.Label("Date")
                    @Html.Kendo().DatePicker().Name("Date").Value(DateTime.Now.Date).HtmlAttributes(new { @style = "width:100%" })
                </div>
                <div class="col-md-3" id="rmo4" style="display:none;">
                    @Html.Label("Date")
                    @Html.Kendo().DatePicker().Name("WorkingDate").Value(DateTime.Now.Date).HtmlAttributes(new { @style = "width:100%" })

                </div>
                <div class="col-md-3 col-sm-4" id="rmo7" style="display:none;">
                    @Html.Label("SortBy")
                    @(Html.Kendo().DropDownList().Name("SortBy")
                        .BindTo(new List<SelectListItem>
                        () {

                            new SelectListItem() {
                            Text = "Select Sorting",
                            Value = ""
                            },
                            new SelectListItem() {
                            Text = "Fresh Remaing",
                            Value = "FR"
                            },
                            new SelectListItem() {
                            Text = "Regular Remaing",
                            Value = "RR"
                            },
                            new SelectListItem() {
                            Text = "Fresh Recovered",
                            Value = "F"
                            },
                            new SelectListItem()
                            {
                                Text = "Regular Recovered",
                                Value = "R"
                            },
                        })
                        .HtmlAttributes(new { @style = "width:100%" }))
                </div>

                <div class="col-md-12">
                    <br /><br />
                    @Html.Kendo().RadioButton().Name("rpt").Label("SRM Wise Outstand Summary").Value("1").Checked(true)<br />
                    @Html.Kendo().RadioButton().Name("rpt").Label("GM Wise Outstand Summary").Value("2")<br />
                    @Html.Kendo().RadioButton().Name("rpt").Label("RM Wise OS Monthly Comparison").Value("3")<br />
                    @Html.Kendo().RadioButton().Name("rpt").Label("RM Wise Remaining Vs Recovered").Value("4")<br />
                    @Html.Kendo().RadioButton().Name("rpt").Label("RM Wise Outstand Summary").Value("5")
                </div>
            </div>



            <div class="row">
                <div class="col-md-3">
                    <br />
                    <button class="k-button margin-10" type="submit">
                        <i class="fas fa-print"></i>&nbsp; Show
                    </button>
                </div>
            </div>

        </div>

    </div>

}
<script>


    $(document).ready(function () {

        $('input[type=radio][name=rpt]').change(function () {
            if (this.value == '1') {
                $("#rmo").css("display", "block");
                $("#rmo1").css("display", "block");
                $("#rmo2").css("display", "none");
                $("#rmo3").css("display", "none");
                $("#rmo4").css("display", "none");
                $("#rmo5").css("display", "none");
                $("#rmo6").css("display", "none");
                $("#rmo7").css("display", "none");
            }
            if (this.value == '2') {
                $("#rmo").css("display", "none");
                $("#rmo1").css("display", "block");
                $("#rmo2").css("display", "none");
                $("#rmo3").css("display", "none");
                $("#rmo4").css("display", "none");
                $("#rmo5").css("display", "none");
                $("#rmo6").css("display", "none");
                $("#rmo7").css("display", "none");
            }
            if (this.value == '3') {
                $("#rmo").css("display", "block");
                $("#rmo1").css("display", "none");
                $("#rmo2").css("display", "block");
                $("#rmo3").css("display", "block");
                $("#rmo4").css("display", "none");
                $("#rmo5").css("display", "none");
                $("#rmo6").css("display", "block");
                $("#rmo7").css("display", "none");
            }
            if (this.value == '4') {
                $("#rmo").css("display", "block");
                $("#rmo1").css("display", "none");
                $("#rmo2").css("display", "none");
                $("#rmo3").css("display", "none");
                $("#rmo4").css("display", "block");
                $("#rmo5").css("display", "none");
                $("#rmo6").css("display", "none");
                $("#rmo7").css("display", "block");
            }
            if (this.value == '5') {
                $("#rmo").css("display", "block");
                $("#rmo1").css("display", "block");
                $("#rmo2").css("display", "none");
                $("#rmo3").css("display", "none");
                $("#rmo4").css("display", "none");
                $("#rmo5").css("display", "none");
                $("#rmo6").css("display", "none");
                $("#rmo7").css("display", "none");
            }
        });
    });
</script>




