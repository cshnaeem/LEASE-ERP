
@{
    ViewBag.Title = "BackendInsentivePolicies Price";
}
<div class="card">
    <div class="content-header">
        <div class="card-header">
            <h3 class="card-title">Backend Insentive Policies</h3>
            <div class="card-tools">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Reports</a></li>
                    <li class="breadcrumb-item active">Backend Insentive Policies</li>
                </ol>
            </div>
        </div>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("BackendIncentivePolicies", "Report", FormMethod.Post, new { target = "_blank" }))
        {
            @Html.AntiForgeryToken()
        <div class="row">

            <div class="col-4">

                @Html.Label("Supplier")
                @(Html.Kendo()
                    .DropDownList()
                    .Name("SuppId")
                    .OptionLabel("All")
                    .DataValueField("SuppId")
                    .DataTextField("SuppName")
                    .Filter(FilterType.Contains)
                    .DataSource(ds =>
                    {
                    ds.Read(read => read.Action("SupplierList", "Setup"));
                    })
                    .HtmlAttributes(new { @style = "width:100%;" })
                    )
            </div>


            <div class="col-4" style="padding-top:38px">
               &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <button class="k-button k-primary" type="submit">
                    <i class="fas fa-print"></i>&nbsp; Print
                </button>
            </div>
        </div>
        }
    </div>
</div>


