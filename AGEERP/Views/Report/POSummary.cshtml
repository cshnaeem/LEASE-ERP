
@{
    ViewBag.Title = "PO Summary Report";
}
<div class="card">
    <div class="content-header">
        <div class="card-header">
            <h3 class="card-title">PO Summary Report</h3>
            <div class="card-tools">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Reports</a></li>
                    <li class="breadcrumb-item active">PO Summary Report</li>
                </ol>
            </div>
        </div>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("POSummary", "Report", FormMethod.Post, new { target = "_blank", id = "frm" }))
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("Criteria")
            <div class="row">
                <div class="col-3">
                    @Html.Label("From Date")
                    @Html.Kendo().DatePicker().Name("FromDate").Value(DateTime.Now.Date).HtmlAttributes(new { @style = "width:100%" })
                </div>
                <div class="col-3">
                    @Html.Label("To Date")
                    @Html.Kendo().DatePicker().Name("ToDate").Value(DateTime.Now.Date).HtmlAttributes(new { @style = "width:100%" })
                </div>
                <div class="col-md-3 col-sm-3">
                    @Html.Label("Category")
                    @(Html.Kendo()
                    .DropDownList()
                    .Name("CatId")
                    .OptionLabel("All")
                    .DataValueField("CategoryId")
                    .DataTextField("CategoryTitle")
                    .Filter(FilterType.Contains)
                    .DataSource(ds =>
                    {
                        ds.Read(read => read.Action("SuppliersCatList", "Setup"));
                    })
                    .HtmlAttributes(new { @style = "width:100%" })
                    )
                </div>
                <div class="col-3">

                    @Html.Label("Supplier")
                    @(Html.Kendo()
                    .DropDownList()
                    .Name("SuppId")
                    .OptionLabel("All")
                    .DataValueField("SuppId")
                    .DataTextField("SuppName")
                    .Filter(FilterType.Contains)
                    .DataSource(ds =>
                    {
                    ds.Read(read => read.Action("SupplierList", "Setup"));
                    })
                    .HtmlAttributes(new { @style = "width:100%;" })
                    )
                </div>
            </div>
            <div class="row">
                @*<div class="col-3">
            @Html.Label("City")
            @(Html.Kendo()
            .DropDownList()
            .Name("CityId")
            //.Placeholder("Select City ...")
            //.SelectedIndex(0)
            .OptionLabel("All")
            .DataValueField("CityId")
            .DataTextField("City")
            .Filter(FilterType.Contains)
            //.Suggest(true)
            .DataSource(ds =>
            {
            ds.Read(read => read.Action("CityList", "Setup"));
            })
            .HtmlAttributes(new { @style = "width:100%" })
            )
        </div>
        <div class="col-3">
            @Html.Label("Location")
            @(Html.Kendo()
            .MultiColumnComboBox()
            .Name("LocId")
            .Placeholder("All Locations ...")
            .DataValueField("LocId")
            .DataTextField("LocName")
            //.SelectedIndex(0)
            .Columns(columns =>
            {
                columns.Add().Field("LocCode").Width("100px");
                columns.Add().Field("LocName").Width("200px");
            })
            .FilterFields(new string[] { "LocCode", "LocName" })
            .CascadeFrom("CityId")
            .Filter(FilterType.Contains)
            //.Suggest(true)
            .DataSource(ds =>
            {
                ds.Read(read => read.Action("LocationByCityList", "Setup").Data("filterCity"));
            })
            .HtmlAttributes(new { @style = "width:100%" })
            )

        </div>*@
                <div class="col-3">
                    @Html.Label("Company")
                    @(Html.Kendo()
                    .DropDownList()
                    .Name("ComId")
                    //.Placeholder("Select Company ...")
                    //.SelectedIndex(0)
                    .OptionLabel("All")
                    .DataValueField("ComId")
                    .DataTextField("ComName")
                    .Filter(FilterType.Contains)
                    //.Suggest(true)
                    .DataSource(ds =>
                    {
                    ds.Read(read => read.Action("CompanyList", "Setup"));
                    })
                    .HtmlAttributes(new { @style = "width:100%" })
                    )

                </div>
                <div class="col-3">
                    @Html.Label("Product")
                    @(Html.Kendo()
                    .DropDownList()
                    .Name("ProductId")
                    //.Placeholder("Select Product ...")
                    //.SelectedIndex(0)
                    .OptionLabel("All")
                    .DataValueField("ProductId")
                    .DataTextField("Name")
                    .Filter(FilterType.Contains)
                    //.Suggest(true)
                    .DataSource(ds =>
                    {
                    ds.Read(read => read.Action("ProductList", "Setup"))
                    .ServerFiltering(true);
                    })
                    .HtmlAttributes(new { @style = "width:100%" })
                    )
                </div>
                <div class="col-3">
                    @Html.Label("Type")
                    @(Html.Kendo()
                    .DropDownList()
                    .Name("TypeId")
                    //.Placeholder("Select Type ...")
                    //.SelectedIndex(0)
                    .OptionLabel("All")
                    .DataValueField("TypeId")
                    .DataTextField("Name")
                    .Filter(FilterType.Contains)
                    .Events(e => e.Change("loadModel"))
                    //.Suggest(true)
                    .DataSource(ds =>
                    {
                    ds.Read(read => read.Action("TypesList", "Setup"))
                    .ServerFiltering(true);
                    })
                    .HtmlAttributes(new { @style = "width:100%" })
                    )
                </div>

                <div class="col-3">
                    @Html.Label("Model")
                    @(Html.Kendo()
                    .DropDownList()
                    .Name("ModelId")
                    //.Placeholder("Select Model ...")
                    //.SelectedIndex(0)
                    .OptionLabel("All")
                    .DataValueField("ModelId")
                    .DataTextField("Model")
                    //.Filter(FilterType.Contains)
                    //.Suggest(true)
                    .CascadeFrom("TypeId")
                    .DataSource(ds =>
                    {
                        ds.Read(read => read.Action("ModelByTypeList", "Setup").Data("filterModel"))
                        .ServerFiltering(true);
                    })
                    .HtmlAttributes(new { @style = "width:100%" })
                    )
                </div>
            </div>
            <div class="row">
                <div class="col-9">
                    <br />
                    @Html.Kendo().RadioButton().Name("rpt").Label("PO Company Product Wise").Value("1").Checked(true)<br />
                    @Html.Kendo().RadioButton().Name("rpt").Label("PO Product Company Wise").Value("2")<br />
                    @Html.Kendo().RadioButton().Name("rpt").Label("PO Company Wise").Value("3")<br />
                    @Html.Kendo().RadioButton().Name("rpt").Label("PO Product Wise").Value("4")<br />
                    @Html.Kendo().RadioButton().Name("rpt").Label("PO Company Product Model Wise").Value("5")<br />
                    @Html.Kendo().RadioButton().Name("rpt").Label("PO Product Company Model Wise").Value("6")
                </div>
                <div class="col-3">
                    <br />
                    <button class="k-button k-primary" type="button" onclick="ShowReport()">
                        <i class="fas fa-print"></i>&nbsp; Print
                    </button>
                </div>
            </div>
        }
    </div>
</div>
<script>
    function ShowReport() {
        var criteria = 'Category:' + $('#CatId').data('kendoDropDownList').text() +
            ' Supplier:' + $('#SuppId').data('kendoDropDownList').text() +
            ' Company:' + $('#ComId').data('kendoDropDownList').text() +
            ' Type:' + $('#TypeId').data('kendoDropDownList').text() +
            ' Product:' + $('#ProductId').data('kendoDropDownList').text() +
            ' Model:' + $('#ModelId').data('kendoDropDownList').text();
        $('#Criteria').val(criteria);
        $('#frm').submit();
    }
    $(document).ready(function () {
        //$('#m_17000000').addClass('active');
        //$('#d_17000000').css("display", "block");
        //$('#m_17010000').addClass('active');
        //$('#a_17010000').addClass('active');
    });
    function filterType() {
        return {
            ComId: $('#ComId').val() || 0
        }
    }
    function filterProduct() {
        return {
            TypeId: $('#TypeId').val() || 0
        }
    }
    function filterCity() {
        return {
            CityId: $('#CityId').val() || 0
        }
    }
    function filterModel() {
        return {
            TypeId: $('#TypeId').val() || 0
        }
    }
    function loadModel() {
        $('#ModelId').data('kendoDropDownList').dataSource.read();
    }
</script>
