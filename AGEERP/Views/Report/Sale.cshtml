
@{
    ViewBag.Title = "Sale";
}
<div class="card">
    <div class="content-header">
        <div class="card-header">
            <h3 class="card-title">Sale Report</h3>
            <div class="card-tools">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Reports</a></li>
                    <li class="breadcrumb-item active">Sale Report</li>
                </ol>
            </div>
        </div>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Sale", "Report", FormMethod.Post, new { target = "_blank" }))
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-3">
                    @Html.Label("From Date")
                    @Html.Kendo().DatePicker().Name("FromDate").Value(DateTime.Now.Date).HtmlAttributes(new { @style = "width:100%" })
                </div>
                <div class="col-3">
                    @Html.Label("To Date")
                    @Html.Kendo().DatePicker().Name("ToDate").Value(DateTime.Now.Date).HtmlAttributes(new { @style = "width:100%" })
                </div>
                <div class="col-3 c14" style="visibility:visible;">
                    @Html.Label("BillNo")
                    @Html.Kendo().NumericTextBox().Name("BillNo").Min(0).Value(0).Format("###").HtmlAttributes(new { @style = "width:100%" })
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    @Html.Label("City")
                    @(Html.Kendo()
                    .DropDownList()
                    .Name("CityId")
                    //.Placeholder("Select City ...")
                    //.SelectedIndex(0)
                    .OptionLabel("All")
                    .DataValueField("CityId")
                    .DataTextField("City")
                    .Filter(FilterType.Contains)
                    //.Suggest(true)
                    .DataSource(ds =>
                    {
                    ds.Read(read => read.Action("CityList", "Setup"));
                    })
                    .HtmlAttributes(new { @style = "width:100%" })
                    )
                </div>
                <div class="col-3">
                    @Html.Label("Location")
                    @(Html.Kendo()
                    .MultiColumnComboBox()
                    .Name("LocId")
                    .Placeholder("All Locations ...")
                    .DataValueField("LocId")
                    .DataTextField("LocName")
                    .Columns(columns =>
                    {
                        columns.Add().Field("LocCode").Width("100px");
                        columns.Add().Field("LocName").Width("200px");
                    })
                    .FilterFields(new string[] { "LocCode", "LocName" })
                    .Filter(FilterType.Contains)
                    .CascadeFrom("CityId")
                    .DataSource(ds =>
                    {
                        ds.Read(read => read.Action("LocationByCityList", "Setup").Data("filterCity"));
                    })
                    .HtmlAttributes(new { @style = "width:100%" })
                    )

                </div>
                <div class="col-3">
                    @Html.Label("Company")
                    @(Html.Kendo()
                    .DropDownList()
                    .Name("ComId")
                    //.Placeholder("Select Company ...")
                    //.SelectedIndex(0)
                    .OptionLabel("All")
                    .DataValueField("ComId")
                    .DataTextField("ComName")
                    .Filter(FilterType.Contains)
                    //.Suggest(true)
                    .DataSource(ds =>
                    {
                    ds.Read(read => read.Action("CompanyList", "Setup"));
                    })
                    .HtmlAttributes(new { @style = "width:100%" })
                    )

                </div>
                <div class="col-3">
                    @Html.Label("Product")
                    @(Html.Kendo()
                    .DropDownList()
                    .Name("ProductId")
                    //.Placeholder("Select Product ...")
                    //.SelectedIndex(0)
                    .OptionLabel("All")
                    .DataValueField("ProductId")
                    .DataTextField("Name")
                    .Filter(FilterType.Contains)
                    //.Suggest(true)
                    .DataSource(ds =>
                    {
                    ds.Read(read => read.Action("ProductList", "Setup"));
                    })
                    .HtmlAttributes(new { @style = "width:100%" })
                    )
                </div>
            </div>
            <div class="row">

                <div class="col-3">
                    @Html.Label("Type")
                    @(Html.Kendo()
                    .DropDownList()
                    .Name("TypeId")
                    //.Placeholder("Select Type ...")
                    //.SelectedIndex(0)
                    .OptionLabel("All")
                    .DataValueField("TypeId")
                    .DataTextField("Name")
                    .Filter(FilterType.Contains)
                    //.Suggest(true)
                    .DataSource(ds =>
                    {
                    ds.Read(read => read.Action("TypesList", "Setup"));
                    })
                    .HtmlAttributes(new { @style = "width:100%" })
                    )
                </div>
                <div class="col-3">
                    @Html.Label("Model")
                    @(Html.Kendo()
                    .DropDownList()
                    .Name("ModelId")
                    //.Placeholder("Select Model ...")
                    //.SelectedIndex(0)
                    .OptionLabel("All")
                    .DataValueField("ModelId")
                    .DataTextField("Model")
                    .Filter(FilterType.Contains)
                    //.Suggest(true)
                    .CascadeFrom("TypeId")
                    .DataSource(ds =>
                    {
                    ds.Read(read => read.Action("ModelByTypeList", "Setup").Data("filterModel"))
                    .ServerFiltering(true);
                    })
                    .HtmlAttributes(new { @style = "width:100%" })
                    )
                </div>
                <div class="col-md-3 col-sm-3 tDive" style="visibility:hidden;">
                    @Html.Label("Sale Type")
                    @(Html.Kendo()
                    .DropDownList()
                    .Name("SaleType")
                    .SelectedIndex(0)
                    .BindTo(new List<SelectListItem>()
                    {
                        new SelectListItem{Text = "All",Value = ""},
                        new SelectListItem{Text = "Cash",Value = "C"},
                        new SelectListItem{Text = "Installment",Value = "I"},
                    })
                    .HtmlAttributes(new { @style = "width:100%"})
                    )
                </div>
            </div>
            <div class="row">
                <div class="col-9">
                    <br />
                    @*@Html.Kendo().RadioButton().Name("rpt").Label("Sale Dual Pkg").Value("1")
        @Html.Kendo().RadioButton().Name("rpt").Label("Sales More than One").Value("2")
        @Html.Kendo().RadioButton().Name("rpt").Label("Sales Profit").Value("3")
        @Html.Kendo().RadioButton().Name("rpt").Label("Sales Ratio").Value("4")*@
                    @Html.Kendo().RadioButton().Name("rpt").Label("Sales Report Detail Wise").Value("5").Checked(true)<br />
                    @Html.Kendo().RadioButton().Name("rpt").Label("Sales Report Location Wise").Value("6")<br />
                    @Html.Kendo().RadioButton().Name("rpt").Label("Sales Report Product Wise").Value("7")<br />
                    @Html.Kendo().RadioButton().Name("rpt").Label("Sales Report Inst Vs Cash").Value("8")<br />
                    @Html.Kendo().RadioButton().Name("rpt").Label("Sales Return Report").Value("9")<br />
                    @Html.Kendo().RadioButton().Name("rpt").Label("Sales Report Model Wise").Value("10")<br />
                    @Html.Kendo().RadioButton().Name("rpt").Label("Sales Report Location Wise Product").Value("11")<br />
                    @Html.Kendo().RadioButton().Name("rpt").Label("Sales Report Company Wise").Value("12")<br />
                    @Html.Kendo().RadioButton().Name("rpt").Label("Sales Anzlysis City Wise").Value("13")<br />
                    @Html.Kendo().RadioButton().Name("rpt").Label("Sales Anzlysis Location Wise").Value("14")
                </div>
                <div class="col-3">
                    <br />
                    <button class="k-button k-primary" type="submit">
                        <i class="fas fa-print"></i>&nbsp; Print
                    </button>
                </div>
            </div>

        }
    </div>
</div>
<script>
    $(document).ready(function () {
        $('input[type=radio][name=rpt]').change(function () {
            if (this.value != '7' && this.value != '8' && this.value != '10' && this.value != '12') {
                $(".tDive").css("visibility", "hidden");
            }
            else {
                $(".tDive").css("visibility", "visible");
            }


            if (this.value == '13' || this.value == '14') {
                $(".c14").css("visibility", "hidden");
            }
            else {
                $(".c14").css("visibility", "visible");
            }
        });
    });
    function filterType() {
        return {
            ComId: $('#ComId').val() || 0
        }
    }
    function filterProduct() {
        return {
            TypeId: $('#TypeId').val() || 0
        }
    }
    function filterCity() {
        return {
            CityId: $('#CityId').val() || 0
        }
    }
    function filterModel() {
        return {
            TypeId: $('#TypeId').val() || 0
        }
    }
</script>