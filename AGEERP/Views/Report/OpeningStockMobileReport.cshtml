
@{
    ViewBag.Title = "Opening Stock Report";
}
@using (Html.BeginForm("OpeningStockMobileReport", "Report", FormMethod.Post, new { target = "_blank", id = "frm" }))
{
    @Html.AntiForgeryToken()
   
    <div class="card">
        <div class="content-header">
            <div class="card-header">
                <h3 class="card-title">Opening Stock Report</h3>
                <div class="card-tools">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Report</a></li>
                        <li class="breadcrumb-item active">Opening Stock Report</li>
                    </ol>
                </div>
            </div>
        </div>
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="row">
                <div class="col-md-12">
                    @Html.Kendo().RadioButton().Name("rpt").Label("Mobile Opening Stock Report").Value("1").Checked(true)
                    @Html.Kendo().RadioButton().Name("rpt").Label("Opening Stock Report").Value("2")
                </div>
            </div>
            <div class="row">
                <div class="col-md-6" id="loc-control">
                    @Html.Label("Location")
                    @(Html.Kendo()
                    .MultiColumnComboBox()
                    .Name("LocId")
                    .Placeholder("Select Locations ...")
                    .DataValueField("LocId")
                    .DataTextField("LocName")
                    .SelectedIndex(0)
                    .Columns(columns =>
                    {
                        columns.Add().Field("LocCode").Width("100px");
                        columns.Add().Field("LocName").Width("200px");
                    })
                    .FilterFields(new string[] { "LocCode", "LocName" })
                    .Filter(FilterType.Contains)
                    .DataSource(ds =>
                    {
                    ds.Read(read => read.Action("LocationList", "Setup"));
                    })
                    .HtmlAttributes(new { @style = "width:100%", @required = true })
                    )
                </div>
                <div class="col-md-6" id="date1-control" style="display:none">
                    @Html.Label("From Date")
                    @Html.Kendo().DatePicker().Name("FromDate").Value(DateTime.Now.Date).HtmlAttributes(new { @style = "width:100%" })
                </div>
                <div class="col-md-6" id="date2-control" style="display:none">
                    @Html.Label("To Date")
                    @Html.Kendo().DatePicker().Name("ToDate").Value(DateTime.Now.Date).HtmlAttributes(new { @style = "width:100%" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 col-sm-4">
                    <br />
                    <button class="k-button margin-10" type="submit">
                        <i class="fas fa-print"></i>&nbsp; Show
                    </button>
                </div>
            </div>
        </div>
    </div>
}
<script>
    $(document).ready(function () {
        $('input[type=radio][name=rpt]').change(function () {
            if (this.value == '1') {
                $("#date1-control").css("display", "none");
                $("#date2-control").css("display", "none");
                $("#loc-control").css("display", "block");
            }
            else if (this.value == '2') {
                $("#loc-control").css("display", "none");
                $("#date1-control").css("display", "block");
                $("#date2-control").css("display", "block");
            }
        });
    });
</script>