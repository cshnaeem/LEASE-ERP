
@{
    ViewBag.Title = "Bank Letter Posting";
}
<div class="card">
    <div class="content-header">
        <div class="card-header">
            <h3 class="card-title">Bank Letter Posting</h3>
            <div class="card-tools">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Salary</a></li>
                    <li class="breadcrumb-item active">Bank Letter Posting</li>
                </ol>
            </div>
        </div>
    </div>

    <div class="col-lg-12 col-md-12 col-xs-12">
        @using (Html.BeginForm("BankLetterPosted", "Report", FormMethod.Post, new { target = "_blank" }))
        {
            @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-3">
                @(Html.Kendo().DropDownList()
                .Name("BlId")
                .OptionLabel("Select Letter")
                .DataValueField("BlId")
                .DataTextField("BLTitle")
                .Template("<div style=\"display: flex\"><span class=\"k-state-default\" style=\"flex: 1;text-align:center;\"><p ><b>BLTitle</b> #: data.BLTitle #   </p></span> </div>")
                .ValueTemplate("#: data.BLTitle #")
                .AutoBind(false)
                .Filter(FilterType.Contains)
                .DataSource(dataSource =>
                {
                    dataSource.Read(read => read.Action("BankLetterPostedLst", "Employee")).ServerFiltering(true);
                })
                .IgnoreCase(true)
                .HtmlAttributes(new { @style = "width:100%" })
                )
            </div>
        </div>
            <div class="row">
                <div class="col-md-3">
                    <br />
                    <button class="k-button margin-10" type="submit">
                        <i class="fas fa-print"></i> Show
                    </button>
                </div>
            </div>
        }
    </div>
</div>


