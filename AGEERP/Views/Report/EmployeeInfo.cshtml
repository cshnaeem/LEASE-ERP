
@{
    ViewBag.Title = "Employee Info";
}
@using (Html.BeginForm("EmployeeInfo", "Report", FormMethod.Post, new { target = "_blank" }))
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="content-header">
            <div class="card-header">
                <h3 class="card-title">Employee Info</h3>
                <div class="card-tools">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
                        <li class="breadcrumb-item active">Daily Attendance</li>
                    </ol>
                </div>
            </div>
        </div>

        <div class="col-lg-12 col-md-12 col-xs-12">           
            <div class="row">

                <div class="col-md-3">
                    @Html.Label("Location")
                    @(Html.Kendo()
                                                             .DropDownList()
                                                             .Name("HDeptId")
                                                             //.OptionLabel("Select Head Department ...")
                                                             .SelectedIndex(0)
                                                             .DataValueField("HDeptId")
                                                             .DataTextField("HDeptName")
                                                             //.Suggest(true)
                                                             //.Filter(FilterType.Contains)
                                                             .DataSource(x => x.Read("HDepartmentList", "Employee"))
                                                             .HtmlAttributes(new { @style = "width:100%" })
                    )
                </div>
                <div class="col-md-3">
                    @Html.Label("Department")
                    @(Html.Kendo()
                                                                    .ComboBox()
                                                                    .Name("DeptId")
                                                                    .Placeholder("All Department ...")
                                                                    .SelectedIndex(0)
                                                                    .DataValueField("DeptId")
                                                                    .DataTextField("Department")
                                                                    .Filter(FilterType.Contains)
                                                                    .CascadeFrom("HDeptId")
                                                                    .DataSource(ds =>
                                                                    {
                                                                        ds.Read(read => read.Action("DeptByHDeptList", "Employee").Data("filterDept")).ServerFiltering(true);
                                                                    })
                                                                    .HtmlAttributes(new { @style = "width:100%" })
                    )
                </div>

                <div class="col-md-3">
                    @Html.Label("Employee")
                    @(Html.Kendo()
                                                                    .DropDownList()
                                                                    .Name("EmpId")
                                                                    .OptionLabel("All")
                                                                    .DataValueField("EmpId")
                                                                    .DataTextField("EmpName")
                                                                    .CascadeFrom("DeptId")
                                                                    .SelectedIndex(0)
                                                                    .Filter(FilterType.Contains)
                                                                    .DataSource(ds =>
                                                                    {
                                                                        ds.Read(read => read.Action("EmpByDeptList", "Employee").Data("filterEmp")).ServerFiltering(true);
                                                                    })
                                                                    .HtmlAttributes(new { @style = "width:100%", @class = "validate" })
                    )
                </div>
                <div class="col-md-3">
                    <br />
                    <button class="k-button margin-10" type="submit">
                        <i class="fas fa-print"></i>&nbsp; Show
                    </button>
                </div>
            </div>

        </div>

    </div>

}
<script>

    $(document).ready(function () {
        //$('#m_17000000').addClass('active');
        //$('#d_17000000').css("display", "block");
        //$('#m_17040000').addClass('active');
        //$('#d_17040000').css("display", "block");
        //$('#m_17040100').addClass('active');
        //$('#a_17040100').addClass('active');
    });
    function filterEmp() {
        return {
            DeptId: $('#DeptId').val()
            //str: $('#EmpId').data("kendoMultiColumnComboBox").input.val() || ""
        }
    }
    function filterDept() {
        return {
            HDeptId: $('#HDeptId').val() || 0,
            str: $('#DeptId').data("kendoComboBox").input.val() || ""
        }
    }
</script>