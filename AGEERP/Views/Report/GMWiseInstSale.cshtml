

@{
    ViewBag.Title = "GMWiseInstSale";
}

@using (Html.BeginForm("GMWiseInstSale", "Report", FormMethod.Post, new { target = "_blank" }))
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="content-header">
            <div class="card-header">
                <h3 class="card-title">Installment Sale Summary</h3>
                <div class="card-tools">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Report</a></li>
                        <li class="breadcrumb-item active">Installment Sale Summary GM Wise</li>
                    </ol>
                </div>
            </div>
        </div>



        <div class="col-lg-12 col-md-12 col-xs-12"  >
            <div class="row">
                <div class="col-md-3" id="rmo">
                    @Html.Label("GM Name")
                    @(Html.Kendo()
                    .MultiColumnComboBox()
                    .Name("GMId")
                    .Placeholder("All GM ...")
                    .DataValueField("GMId")
                    .DataTextField("GMName")

                    .Columns(columns =>
                    {
                        columns.Add().Field("GMId").Width("100px");
                        columns.Add().Field("GMName").Width("200px");
                    })
                    .FilterFields(new string[] { "GMId", "GMName" })
                    .Filter(FilterType.Contains)
                    .DataSource(ds =>
                    {
                    ds.Read(read => read.Action("GMList", "Employee"));
                    })
                    .HtmlAttributes(new { @style = "width:100%" })
                    )
                </div>
                <div class="col-md-3" id="rmo1" >
                    @Html.Label("Month")
                    @Html.Kendo().DatePicker().Name("Month").Value(DateTime.Now.Date).HtmlAttributes(new { @style = "width:100%" })

                </div>
                <div class="col-md-3" id="rmo3" style="display:none;">
                    @Html.Label("Month")
                    @Html.Kendo().DatePicker().Name("ToMonth").Value(DateTime.Now.Date).HtmlAttributes(new { @style = "width:100%" })
                </div>

                <div class="col-md-3" id="rmo2" style="display:none;">
                    @Html.Label("Designation")
                    @(Html.Kendo().DropDownList().Name("Designation")
                    .BindTo(new List<SelectListItem>
                        () {

                        new SelectListItem() {
                        Text = "Select Designation",
                        Value = ""
                        },
                        new SelectListItem() {
                        Text = "RM",
                        Value = "R"
                        },
                        new SelectListItem() {
                        Text = "SRM",
                        Value = "S"
                        },
                        new SelectListItem() {
                        Text = "BDM",
                        Value = "B"
                        },
                        })
                        .HtmlAttributes(new { @style = "width:100%" }))

                </div>
                <div class="col-md-12">
                    <br /><br />
                    @Html.Kendo().RadioButton().Name("rpt").Label("GM Wise Installment Summary").Value("1").Checked(true)<br />
                    @Html.Kendo().RadioButton().Name("rpt").Label("RM/SRM/BDM Wise Installment Summary").Value("2")<br />
                    @Html.Kendo().RadioButton().Name("rpt").Label("Month Wise Sale Comparison").Value("3")<br />
                </div>

            </div>



            <div class="row">
                <div class="col-md-3">
                    <br />
                    <button class="k-button margin-10" type="submit">
                        <i class="fas fa-print"></i>&nbsp; Show
                    </button>
                </div>
            </div>

        </div>

    </div>

}
<script>
 $(document).ready(function () {

        $('input[type=radio][name=rpt]').change(function () {
            if (this.value == '1') {
                $("#rmo").css("display", "block");
                $("#rmo1").css("display", "block");
                $("#rmo2").css("display", "none");
                $("#rmo3").css("display", "none");
            }
            if (this.value == '2') {
                $("#rmo").css("display", "none");
                $("#rmo1").css("display", "block");
                $("#rmo2").css("display", "block");
                $("#rmo3").css("display", "none");
            }
            if (this.value == '3') {
                $("#rmo").css("display", "block");
                $("#rmo1").css("display", "block");
                $("#rmo2").css("display", "none");
                $("#rmo3").css("display", "block");

            }

        });
    });
</script>
