    function RequestDetail() {

    }
    function filterDept() {
        return {
            HDeptId: $('#HDeptId').val() || 0,
            str: $('#DeptId').data("kendoComboBox").input.val() || ""
        }
    }
    function GetDoc(e) {
        e.preventDefault();
        var dataItem = this.dataItem($(e.currentTarget).closest("tr"));
        $("#DocId").val(dataItem.DocId);
        $("#RefObjId").val(13);
        $("#frmDoc").submit();
    }
    function GetDate() {
        return {
            StartDate: $('#FDate').val(),
            EndDate: $('#TDate').val()
        }
    }
    function onDepChange() {
        $('#EmpId').data("kendoDropDownList").dataSource.read();
    }
    function filterEmp() {
        return {
            DeptId: $('#DeptId').val()
            //str: $('#EmpId').data("kendoMultiColumnComboBox").input.val() || ""
        }
    }
    function resizeGrid() {
        var height = $(window).innerHeight() - $('header').innerHeight() - 180;
        if (height < 200) {
            height = 200;
        }
        else if (height > 910) {
            height = 910;
        }
        $("#gridEmployeeLeave").css("height", height);
        gridElement.data("kendoGrid").resize();
    }
    function LoadGrid() {
        $("#gridEmployeeLeave").data("kendoGrid").dataSource.read();
    }
    $(window).resize(function () {
        resizeGrid();
    });
 
    function CheckVisibility(e) {
        return true;
        //if (e.ReceivedBy1 != null && e.ReceivedBy2 != null && e.ReceivedBy3 != null) {
        //    return true
        //}
        //else {
        //    return false;
        //}
    }
    function error_handler(e) {
        if (e.errors) {
            var message = "Msg:\n";
            $.each(e.errors, function (key, value) {
                if ('errors' in value) {
                    $.each(value.errors, function () {
                        message += this + "\n";
                    });
                }
            });
            var dia = $("#msgBox").data("kendoDialog");
            dia.title("Msg");
            dia.content(message);
            dia.open();
        }
    }

</script>
