@using AGEERP.Models
@{
    ViewBag.Title = "Category";
}

<div class="card">
    <div class="content-header">

        <div class="card-header">
            <h3 class="card-title">Category</h3>
            <div class="card-tools">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
                    <li class="breadcrumb-item active">Category</li>
                </ol>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            @(Html.Kendo()
                 .Grid<ItemCategoryVM>()
                 .Name("gridCategory")
                 .Columns(columns =>
                 {
                     columns.Bound(c => c.ItemCategoryId).Filterable(false).Hidden();
                     columns.Bound(c => c.ItemCategory).Title("Category");
                     columns.ForeignKey(p => p.ItemNatureId, (System.Collections.IEnumerable)ViewData["NatureVD"], "ItemNatureId", "ItemNature").Title("ItemNature");
                     columns.Command(c => { c.Edit(); c.Destroy(); });
                 })
                 .Pageable()
                 .Sortable()
                 .Scrollable()
                 .ToolBar(t => { t.Create(); t.Search(); })
                 .Search(s => { s.Field(a => a.ItemCategory);  })
                 .Navigatable()
                 .Editable(e => e.Mode(GridEditMode.InLine))
                 .HtmlAttributes(new { style = "height:400px;" })
                 .DataSource(dataSource => dataSource
                 .Ajax()
                 .PageSize(20)
                 .Events(e => e.Error("error_handler"))
                 .Model(model =>
                 {
                     model.Id(m => m.ItemCategoryId);
                 })
                 .Read(read => read.Action("Category_Read", "Procurement"))
                 .Create(create => create.Action("Category_Create", "Procurement"))
                 .Update(update => update.Action("Category_Update", "Procurement"))
                 .Destroy(update => update.Action("Category_Destroy", "Procurement"))
                 ))
        </div>
    </div>
</div>
@section Scripts{
    <script type="text/javascript">
        var gridElement = $("#gridCategory");
        $(document).ready(function () {
            resizeGrid();
            //$('#m_10000000').addClass('active');
            //$('#d_10000000').css("display", "block");
            //$('#m_10010000').addClass('active');
            //$('#d_10010000').css("display", "block");
            //$('#m_10010100').addClass('active');
            //$('#a_10010100').addClass('active');
        })

        function resizeGrid() {
            var height = $(window).innerHeight() - $('header').innerHeight() - 120;
            if (height < 200) {
                height = 200;
            }
            else if (height > 910) {
                height = 910;
            }
            $("#gridCategory").css("height", height);
            gridElement.data("kendoGrid").resize();
        }

        $(window).resize(function () {
            resizeGrid();
        });
        function error_handler(e) {
            if (e.errors) {
                var message = "Errors:\n";
                $.each(e.errors, function (key, value) {
                    if ('errors' in value) {
                        $.each(value.errors, function () {
                            message += this + "\n";
                        });
                    }
                });
                var dia = $("#msgBox").data("kendoDialog");
                dia.title("Error");
                dia.content(message);
                dia.open();
            }
        }
    </script>
}



