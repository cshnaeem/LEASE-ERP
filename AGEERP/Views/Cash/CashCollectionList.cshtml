        function ViewDoc(e) {
            e.preventDefault();
            var dataItem = this.dataItem($(e.currentTarget).closest("tr"));
            $("#DocId").val(dataItem.DocId);
            $("#RefObjId").val(7);
            $("#frmDoc").submit();
        }
        function loadGrid() {
            $('#gridCashCollection').data('kendoGrid').dataSource.read();
            $('#EmpId').data('kendoDropDownList').dataSource.read();
            //$('#AccId').data('kendoDropDownList').dataSource.read();
        }
        function LocData() {
            //var cashDeposit = $('#DepositTo').val();
            return {
                WorkingDate: $('#WorkingDate').val(),
                DepositTo: 'Cashier',
                LocId: $('#LocId').val(),
                EmpId: $('#EmpId').val() || 0
            }
        }
        function filterCashier() {
            return {
