      .Columns(columns =>
      {
          columns.Bound(c => c.DocId).Hidden();
          columns.Select().Width(50);
          columns.Bound(c => c.LocName);
          columns.Bound(c => c.CashPayable).Format("{0:n0}");
          columns.Bound(c => c.CashAmount).Format("{0:n0}").ClientFooterTemplate("Total: #=sum#");
