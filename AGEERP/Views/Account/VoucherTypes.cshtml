@using AGEERP.Models
@{
    ViewBag.Title = "VoucherTypes";
}
<div class="card">
    <div class="content-header">
        <div class="card-header">
            <h3 class="card-title">Voucher Types</h3>
            <div class="card-tools">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
                    <li class="breadcrumb-item active">Voucher Types</li>
                </ol>
            </div>
        </div>
    </div>
    <div class="card-body">
        @(Html.Kendo()
           .Grid<VoucherTypeVM>()
           .Name("gridVoucherTypes")
           .Columns(columns =>
           {
           columns.Bound(c => c.VrTypeId).Title("Voucher Type ID");
           columns.Bound(c => c.VrTypeDesc).Title("Voucher Type");
           })
           .HtmlAttributes(new { style = "height:400px;" })
           .BindTo(ViewBag.VType)
        )
    </div>
</div>

<script type="text/javascript">
    var gridElement = $("#gridVoucherTypes");
    $(document).ready(function () {
        resizeGrid();
        //$('#m_15000000').addClass('active');
        //$('#d_15000000').css("display", "block");
        //$('#m_15040000').addClass('active');
        //$('#a_15040000').addClass('active');
    })

    function resizeGrid() {
        var height = $(window).innerHeight() - $('header').innerHeight() - 180;
        if (height < 200) {
            height = 200;
        }
        else if (height > 910) {
            height = 910;
        }
        $("#gridVoucherTypes").css("height", height);
        gridElement.data("kendoGrid").resize();
    }

    $(window).resize(function () {
        resizeGrid();
    });
    function error_handler(e) {
        if (e.errors) {
            var message = "Errors:\n";
            $.each(e.errors, function (key, value) {
                if ('errors' in value) {
                    $.each(value.errors, function () {
                        message += this + "\n";
                    });
                }
            });
            var dia = $("#msgBox").data("kendoDialog");
            dia.title("Error");
            dia.content(message);
            dia.open();
        }
    }
</script>
