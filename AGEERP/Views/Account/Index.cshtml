@model IEnumerable<AGEERP.Models.UserMenuInfo>
@{
    ViewBag.Title = "Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var stp = Model.Where(it => it.Menu2 == 9).OrderBy(it => it.SortOrder).ToList();
    var forms = Model.Where(it => it.Menu2 == 10).OrderBy(x => x.ParentId).ThenBy(it => it.SortOrder).ToList();
    var reports = Model.Where(it => it.Menu2 == 17).OrderBy(it => it.SortOrder).ToList();
}

<div class="row">
    @if (stp.Count > 0)
    {
        <div class="col-md-4" style="margin-top:5px;">
            <div class="card h-100 card-outline card-danger">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-text-width"></i>
                        Accounts Setup
                    </h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <ul style="list-style:none;padding-left:0px;">
                        @foreach (var menu in stp)
                        {
                        <li id="m_@menu.MenuId">

                            @*<a class="dropdown-item" href="@menu.ActionLink" style="color:black;">
                                @menu.Name
                            </a>*@
                            <a class="dropdown-item" style="color:black;" href="@menu.ActionLink">
                            <i class="far fa-dot-circle nav-icon"></i>
                            @menu.Name
                            </a>
                        </li>
                        }
                    </ul>
                </div>
                <!-- /.card-body -->
            </div>
        </div>
    }
    @if (forms.Count > 0)
    {
        <div class="col-md-4" style="margin-top:5px;">
            <div class="card h-100 card-outline card-danger">
                <div class="card-header  ">
                    <h3 class="card-title">
                        <i class="fas fa-text-width"></i>
                        Accounts Forms
                    </h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <ul style="list-style:none;padding-left:0px;">
                        @foreach (var menu in forms)
                        {
                            <li id="m_@menu.MenuId">

                                <a class="dropdown-item" href="@menu.ActionLink" style="color:black;">
                                    <i class="far fa-dot-circle nav-icon"></i>
                                    @menu.Name
                                </a>
                            </li>
                        }
                    </ul>
                </div>
                <!-- /.card-body -->
            </div>
        </div>
    }
    @if (reports.Count > 0)
    {
        <div class="col-md-4" style="margin-top:5px;">
            <div class="card h-100 card-outline card-danger">
                <div class="card-header ">
                    <h3 class="card-title">
                        <i class="fas fa-text-width"></i>
                        Accounts Reports
                    </h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <ul style="list-style:none;padding-left:0px;">
                        @foreach (var menu in reports)
                        {
                            <li id="m_@menu.MenuId">

                                <a class="dropdown-item" href="@menu.ActionLink" style="color:black;">
                                    <i class="far fa-dot-circle nav-icon"></i>
                                    @menu.Name
                                </a>
                            </li>
                        }
                    </ul>
                </div>
                <!-- /.card-body -->
            </div>
        </div>
    }
    </div>
